{{!

This template is to be used with all simple paged listings.

}}
<nav class="pager">
<a
  href="#" 
  title="Previous Page"
  id="previous-{{ prefix }}-page"
  class="pager-button link-button"
>Prev</a> 
<a
  href="#"
  title="Next Page"
  class="pager-button link-button"
  id="next-{{ prefix }}-page"
  {{#lastrow}}
    data-last-page="true"
    data-startkey="{{ encoded_key }}"
    data-startid="{{ id }}"
  {{/lastrow}}
>Next</a>
</nav>
<div class="total-rows-info">
  <b>Total</b>: {{ total_rows }}
</div>
<table>
  {{#rows}}
    {{> listed-element}}
  {{/rows}}
</table>
