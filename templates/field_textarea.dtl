{% extends "field.dtl" %}
  
{% block input_area %}
  <textarea 
    class="field textarea ui-widget ui-corner-all"
    {% if default != "" %}
    data-field-default="{{ default|urlencode }}"
    {% endif %}
    {% include 'field_common_attributes.dtl' %}
  >{% if default %}{{ default|urlencode }}{% endif %}</textarea>
  <span title="Expand/Shrink Text Box" class="expander" data-group-id="{{ _id }}-{{ instance_id }}"></span>
{% endblock %}
