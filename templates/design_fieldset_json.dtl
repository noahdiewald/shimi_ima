{
   "_id": "_design/{{ _id }}",
   "version": 2,
   "views": {
       "fields": {
           "map": "function(doc) { if (doc.category == 'field' && doc.doctype == '{{ doctype }}' && doc.fieldset == '{{ _id }}')  { emit(doc.order, null) } }" 
       },
       "fields_simple": {
           "map": "function(doc) { if (doc.category == 'field' && doc.doctype == '{{ doctype }}' && doc.fieldset == '{{ _id }}')  { emit(doc.label, doc.name) } }" 
       }
   }
}
