<!DOCTYPE html>
<html version="HTML+RDFa 1.1" lang="en">
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="content-type">
    <title>
      {% block page_title %}{{ title }}{% endblock %}
    </title>
    
    <link href="/favicon.ico" rel="icon" type="image/x-icon">
    <link href="/css/ui-lightness/jquery-ui-1.8.4.custom.css" rel="stylesheet" type="text/css">
    <link href="/css/screen.css" rel="stylesheet" type="text/css">
    
    <script type="text/javascript" src="/js/jquery-1.4.2.min.js"></script>
    <script type="text/javascript" src="/js/jquery-ui-1.8.4.custom.min.js"></script>
    <script type="text/javascript" src="/js/json2.js"></script>
    <script type="text/javascript" src="/js/underscore-min.js"></script>
    <script type="text/javascript" src="/js/underscore.strings-min.js"></script>
    <script type="text/javascript" src="/js/application.js"></script>
    {% block javascript %}{% endblock %}
  </head>
  <body>

    <header>
    <nav id="main-navigation" class="ui-widget ui-widget-header ui-corner-all">
      <ul>
      {% if user %}
        {% for role in user.roles %}
          {% if role == "_admin" or role == "manager" %}
          <li><a href="/projects">Projects</a></li>
          {% endif %}
        {% endfor %}
      {% endif %}
      {% block navigation %}{% endblock %}
      </ul>
    </nav>
    {% block header %}<h1>{{ title }}</h1>{% endblock %}
    {% include 'notifications.dtl' %}
    </header>
    
    {% block dialogs %}{% endblock %}
        
    <section id="main-content">
    {% block main_content %}{% endblock %}
    </section>
    
    <div id="loading">
      <img src="/ajax-loader.gif" />
      <p>Loading...</p>
    </div>
  </body>
</html>

