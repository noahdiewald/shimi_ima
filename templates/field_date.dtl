{% extends "field.dtl" %}

{% block format_info %}
Format date as: yyyy-mm-dd.
{% endblock %}

{% block input_area %}
  <input 
    class="date field field-text ui-widget ui-corner-all"
    type="text" 
    value="{% if default %}{{ default }}{% endif %}"
    {% if default != "" %}
    data-field-default="{{ default }}"
    {% endif %}
    {% include 'field_common_attributes.dtl' %}
  />
{% endblock %}
