{% extends "field.dtl" %}
  
{% block input_area %}
  <select 
    multiple=true
    class="field multiselect ui-widget ui-corner-all"
    {% if default != "" %}
    data-field-default="{{ default|join:"," }}"
    {% endif %}
    {% include 'field_common_attributes.dtl' %}>
    {% for option in allowed %}
      <option
        {% if option == default %}selected=true{% endif %}
        value="{{ option }}"
      >{{ option }}</option>
    {% endfor %}
  </select>
{% endblock %}
